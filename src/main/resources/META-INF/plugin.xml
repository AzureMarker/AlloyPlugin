<idea-plugin>
    <id>com.rit.csci746.alloy-plugin</id>
    <name>Alloy</name>
    <vendor>RIT CSCI746</vendor>

    <description><![CDATA[
      Adds support for the <a href="http://alloytools.org/">Alloy</a> modeling language.<br>
    ]]></description>

    <!-- Enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Alloy"
                  extensions="als"
                  implementationClass="edu.rit.csci746.alloyplugin.AlloyFileType"/>
        <lang.parserDefinition
                language="Alloy"
                implementationClass="edu.rit.csci746.alloyplugin.AlloyParserDefinition"/>
    </extensions>

    <actions>
        <group id="AlloyPlugin.SampleMenu" text="Greeting" description="Greeting menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="AlloyPlugin.Textboxes"
                    class="edu.rit.csci746.alloyplugin.HelloAction"
                    text="Hello"
                    description="Says hello" />
        </group>
    </actions>
</idea-plugin>